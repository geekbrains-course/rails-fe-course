  = form_with(url: posts_path, method: :get, data: {action: "submit->search#submit"}) do |f|
    = label_tag(:query, "Search for")
    
    %div{"data-autocomplete-url-value" => autocomplete_posts_path, "data-controller" => "autocomplete"}
      = text_field_tag :query, params[:query], class: 'form-control', data: {target: "search.query", "autocomplete-target" => "input"}
      %ul{"data-autocomplete-target" => "results"}
  
    = submit_tag("Search", class: "btn btn-primary")