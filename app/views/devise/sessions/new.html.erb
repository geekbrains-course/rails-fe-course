<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col col-4">
      <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin" }) do |f| %>
        <label>Email</label>
        <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "Email" %>
        <label>Password</label>
        <%= f.email_field :password, autofocus: true, class: "form-control", autocomplete: "Current password" %>
        <% if devise_mapping.rememberable? %>
          <div class="checkbox mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <%= f.submit "Log in", class: "btn btn-dark" %>
      <% end %>
      <div class="pt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
