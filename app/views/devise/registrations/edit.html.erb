<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col col-4">
      <h1 class="h3 mb-3 font-weight-normal">Edit <%= resource_name.to_s.humanize %></h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin", method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <label>Email</label>
        <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "Email" %>
        <label>Password <i>(leave blank if you don't want to change it)</i></label>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autofocus: true, class: "form-control", autocomplete: "New password" %>
        <label>Password confirmation</label>
        <%= f.password_field :password_confirmation, autofocus: true, class: "form-control", autocomplete: "New password" %>
        <label>Current password<i>(we need your current password to confirm your changes)</i></label>
        <%= f.password_field :current_password, autofocus: true, class: "form-control", autocomplete: "Current password" %>
        <%= f.submit "Update", class: "btn btn-dark" %>
      <% end %>
      <div class="pt-3">
        <%= render "devise/shared/links" %>
      </div>

      <div class="pt-3">
        <h3>Cancel my account</h3>

        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</div>
